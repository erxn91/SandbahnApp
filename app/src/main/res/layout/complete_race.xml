<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true">

            <TextView
                    android:id="@+id/TV_ONE_OF_THREE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fahrer"
                    android:textSize="26sp"/>

            <Switch
                    android:id="@+id/SW_AUSGEFALLEN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Fahrer ausgefallen"/>

            <RadioGroup
                    android:id="@+id/RG_FAHRER_PLATZ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                <RadioButton
                        android:id="@+id/RB_ERSTER"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Erster"/>

                <RadioButton
                        android:id="@+id/RB_ZWEITER"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zweiter"
                        android:layout_marginLeft="10dp"/>

                <RadioButton
                        android:id="@+id/RB_DRITTER"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dritter"
                        android:layout_marginLeft="10dp"/>

            </RadioGroup>

            <Button
                    android:id="@+id/BUTTON_NEXT_DRIVER"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:text="Weiter"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>