<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_not_finished_event_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.erxn.sandbahnapp.NotFinishedEventDetail">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">

        <TextView
                android:id="@+id/TV_DETAIL_ORT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Ort des Events"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/TV_DETAIL_ANZAHL_FAHRER"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Anzahl der Fahrer"/>

            <Button
                    android:id="@+id/BUTTON_LIST_DRIVERS_DETAIL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Liste"
                    android:onClick="clicked"/>

        </LinearLayout>

        <Button
                android:id="@+id/BUTTON_ZUM_RENNEN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="30dp"
                android:text="zum Rennen"/>

    </LinearLayout>

</RelativeLayout>
